{
  "compilerOptions": {
    "target": "ES2020",
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "useDefineForClassFields": true,

    /* Path */
    "baseUrl": ".",
    "module": "ESNext",

    /* Bundler mode */
    "moduleResolution": "bundler",
    "paths": {
      "@v-c/util": [
        "./packages/util/src"
      ],
      "@v-c/checkbox": [
        "./packages/checkbox/src"
      ],
      "@v-c/resize-observer": [
        "./packages/resize-observer/src"
      ],
      "@v-c/util/*": [
        "./packages/util/src/*"
      ],
      "@v-c/input/*": [
        "./packages/input/src/*"
      ],
      "@v-c/portal": [
        "./packages/portal/src"
      ]
    },
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,
    /* Linting */
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noEmit": true,
    "isolatedModules": true,
    "skipLibCheck": true
  },
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
